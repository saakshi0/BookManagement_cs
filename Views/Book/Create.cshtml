@model BooksEntity

@{
    ViewData["Title"] = "Adding New Book";
}

<form asp-action="CreateBook" asp-controller="Book" method="post">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>Books Title</label>
                <input asp-for="Title" type="text" class="form-control" required>
            </div>
            <div class="form-group">
                <label>Author</label>
                <input asp-for="Author" type="text" class="form-control" required>
            </div>
            <div class="col-lg-12">
                <label>ISBN Number</label>
                <input asp-for="ISBN" type="text" class="form-control" required>
            </div>
            <div class="form-group">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-primary">Create Book</button>
                    <a asp-action="Index" asp-controller="Books" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>


    </div>
</form>