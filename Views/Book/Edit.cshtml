@model BooksEntity

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <div>
        <label for="Title">Title</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label for="Author">Author</label>
        <input asp-for="Author" />
    </div>
    <div>
        <label for="ISBN">ISBN</label>
        <input asp-for="ISBN" />
    </div>

    @if (Model.PdfContent != null)
    {
        <div>
            <label>Existing PDF:</label>
            <a asp-action="ViewPdf" asp-route-id="@Model.Id">View PDF</a>
        </div>
    }

    <div>
        <label for="PdfContent">Upload New PDF</label>
        <input type="file" id="PdfContent" name="PdfContent" />
    </div>

    <button type="submit">Save</button>
    <a asp-action="Index" asp-controller="Books" class="btn btn-secondary">Cancel</a>

</form>
